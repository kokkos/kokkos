pipeline {
    agent none

    options {
        timeout(time: 6, unit: 'HOURS')
    }

    stages {
        stage('Build') {
            parallel {
                stage('spack-serial') {
                    agent {
                        docker {
                          image 'ubuntu:20.04'
                          label 'docker'
                        }
                    }
                    steps {
                        sh '''
                          DEBIAN_FRONTEND=noninteractive && \
                          apt-get update && apt-get upgrade -y && apt-get install -y \
                          build-essential \
                          wget \
                          git \
                          bc \
                          python-dev \
                          && \
                          apt-get clean && rm -rf /var/lib/apt/lists/*
                          
                          KEYDUMP_URL=https://cloud.cees.ornl.gov/download && \
                          KEYDUMP_FILE=keydump && \
                          wget --quiet ${KEYDUMP_URL}/${KEYDUMP_FILE} && \
                          wget --quiet ${KEYDUMP_URL}/${KEYDUMP_FILE}.sig && \
                          gpg --import ${KEYDUMP_FILE} && \
                          gpg --verify ${KEYDUMP_FILE}.sig ${KEYDUMP_FILE} && \
                          rm ${KEYDUMP_FILE}*

                          rm -rf spack && \
                          git clone https://github.com/spack/spack.git && \
                          . ./spack/share/spack/setup-env.sh && \
                          spack install kokkos@develop+tests && \
                          spack load cmake && \
                          spack test run kokkos && \
                          spack test results -l
                          '''
                    }      
                }    

                stage('spack-cuda') {
                    agent {
                        docker {
                          image 'ubuntu:20.04'
                          label 'nvidia-docker'
                        }
                    }
                    steps {
                        sh '''
                          DEBIAN_FRONTEND=noninteractive && \
                          apt-get update && apt-get upgrade -y && apt-get install -y \
                          build-essential \
                          wget \
                          git \
                          bc \
                          python-dev \
                          gfortran \
                          && \
                          apt-get clean && rm -rf /var/lib/apt/lists/*
                          
                          KEYDUMP_URL=https://cloud.cees.ornl.gov/download && \
                          KEYDUMP_FILE=keydump && \
                          wget --quiet ${KEYDUMP_URL}/${KEYDUMP_FILE} && \
                          wget --quiet ${KEYDUMP_URL}/${KEYDUMP_FILE}.sig && \
                          gpg --import ${KEYDUMP_FILE} && \
                          gpg --verify ${KEYDUMP_FILE}.sig ${KEYDUMP_FILE} && \
                          rm ${KEYDUMP_FILE}*

                          rm -rf spack && \
                          git clone https://github.com/spack/spack.git && \
                          . ./spack/share/spack/setup-env.sh && \
                          spack spec kokkos@develop+cuda+wrapper+tests cuda_arch=70 ^cuda@11.6.0 && \
                          spack install -v kokkos@develop+cuda+wrapper+tests cuda_arch=70 ^cuda@11.6.0 && \
                          spack load cmake && \
                          spack load kokkos-nvcc-wrapper && \
                          spack load kokkos && \
                          spack test run kokkos && \
                          spack test results -l
                          '''
                    }      
                }

                stage('spack-rocm') {
                    agent {
                        docker {
                          image 'ubuntu:20.04'
                          label 'rocm-docker && AMD_Radeon_Instinct_MI100'
                        }
                    }
                    steps {
                        sh '''
                          DEBIAN_FRONTEND=noninteractive && \
                          apt-get update && apt-get upgrade -y && apt-get install -y \
                          build-essential \
                          wget \
                          git \
                          bc \
                          python-dev \
                          unzip \
                          libudev-dev \
                          zlib1g-dev \
                          && \
                          apt-get clean && rm -rf /var/lib/apt/lists/*
                          
                          KEYDUMP_URL=https://cloud.cees.ornl.gov/download && \
                          KEYDUMP_FILE=keydump && \
                          wget --quiet ${KEYDUMP_URL}/${KEYDUMP_FILE} && \
                          wget --quiet ${KEYDUMP_URL}/${KEYDUMP_FILE}.sig && \
                          gpg --import ${KEYDUMP_FILE} && \
                          gpg --verify ${KEYDUMP_FILE}.sig ${KEYDUMP_FILE} && \
                          rm ${KEYDUMP_FILE}*

                          rm -rf spack && \
                          git clone https://github.com/spack/spack.git && \
                          . ./spack/share/spack/setup-env.sh && \
                          spack spec kokkos@develop+rocm+tests std=17 amdgpu_target=gfx908 && \
                          spack install -v kokkos@develop+rocm+tests std=17 amdgpu_target=gfx908 && \
                          spack load cmake && \
                          spack load kokkos && \
                          spack test run kokkos && \
                          spack test results -l
                          '''
                    }      
                }
            }
        }
    }
}
