pipeline {
    agent none

    options {
        timeout(time: 6, unit: 'HOURS')
    }

    stages {
        stage('Build') {
            parallel {
                stage('spack-serial') {
                    agent {
                        docker {
                          image 'ubuntu:20.04'
                          label 'docker'
                        }
                    }
                    steps {
                        sh '''
                          DEBIAN_FRONTEND=noninteractive && \
                          apt-get update && apt-get upgrade -y && apt-get install -y \
                          build-essential \
                          wget \
                          git \
                          bc \
                          python-dev \
                          && \
                          apt-get clean && rm -rf /var/lib/apt/lists/*
                          
                          KEYDUMP_URL=https://cloud.cees.ornl.gov/download && \
                          KEYDUMP_FILE=keydump && \
                          wget --quiet ${KEYDUMP_URL}/${KEYDUMP_FILE} && \
                          wget --quiet ${KEYDUMP_URL}/${KEYDUMP_FILE}.sig && \
                          gpg --import ${KEYDUMP_FILE} && \
                          gpg --verify ${KEYDUMP_FILE}.sig ${KEYDUMP_FILE} && \
                          rm ${KEYDUMP_FILE}*

                          rm -rf spack && \
                          git clone https://github.com/spack/spack.git && \
                          . ./spack/share/spack/setup-env.sh && \
                          spack install kokkos@develop+tests && \
                          spack load cmake && \
                          spack test run kokkos && \
                          spack test results -l
                          '''
                    }      

                stage('spack-cuda') {
                    agent {
                        docker {
                          image 'ubuntu:20.04'
                          label 'nvidia-docker'
                        }
                    }
                    steps {
                        sh '''
                          DEBIAN_FRONTEND=noninteractive && \
                          apt-get update && apt-get upgrade -y && apt-get install -y \
                          build-essential \
                          wget \
                          git \
                          bc \
                          python-dev \
                          && \
                          apt-get clean && rm -rf /var/lib/apt/lists/*
                          
                          KEYDUMP_URL=https://cloud.cees.ornl.gov/download && \
                          KEYDUMP_FILE=keydump && \
                          wget --quiet ${KEYDUMP_URL}/${KEYDUMP_FILE} && \
                          wget --quiet ${KEYDUMP_URL}/${KEYDUMP_FILE}.sig && \
                          gpg --import ${KEYDUMP_FILE} && \
                          gpg --verify ${KEYDUMP_FILE}.sig ${KEYDUMP_FILE} && \
                          rm ${KEYDUMP_FILE}*

                          rm -rf spack && \
                          git clone https://github.com/spack/spack.git && \
                          . ./spack/share/spack/setup-env.sh && \
                          spack install kokkos@develop+cuda+tests && \
                          spack load cmake && \
                          spack test run kokkos && \
                          spack test results -l
                          '''
                    }      
                }

                stage('spack-rocm') {
                    agent {
                        docker {
                          image 'ubuntu:20.04'
                          label 'rocm-docker'
                        }
                    }
                    steps {
                        sh '''
                          DEBIAN_FRONTEND=noninteractive && \
                          apt-get update && apt-get upgrade -y && apt-get install -y \
                          build-essential \
                          wget \
                          git \
                          bc \
                          python-dev \
                          && \
                          apt-get clean && rm -rf /var/lib/apt/lists/*
                          
                          KEYDUMP_URL=https://cloud.cees.ornl.gov/download && \
                          KEYDUMP_FILE=keydump && \
                          wget --quiet ${KEYDUMP_URL}/${KEYDUMP_FILE} && \
                          wget --quiet ${KEYDUMP_URL}/${KEYDUMP_FILE}.sig && \
                          gpg --import ${KEYDUMP_FILE} && \
                          gpg --verify ${KEYDUMP_FILE}.sig ${KEYDUMP_FILE} && \
                          rm ${KEYDUMP_FILE}*

                          rm -rf spack && \
                          git clone https://github.com/spack/spack.git && \
                          . ./spack/share/spack/setup-env.sh && \
                          spack install kokkos@develop+rocm+tests && \
                          spack load cmake && \
                          spack test run kokkos && \
                          spack test results -l
                          '''
                    }      
                }
            }
        }
    }
}
