    #just append the headers and sources to the list
    SET_PROPERTY(GLOBAL APPEND PROPERTY KOKKOS_ALL_SOURCES ${PARSE_SOURCES})
    GET_PROPERTY(SRCS GLOBAL PROPERTY KOKKOS_ALL_SOURCES)
  endif()
ENDFUNCTION()

